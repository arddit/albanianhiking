<% provide(:title, "Contact Us") %>

<h2>Send us a message</h2>

  <%= form_for @contact, :html => {:class => '' } do |f| %>
    <div class="row">
      <div class="col-md-5">
        Name:
        <%= f.text_field :name, :required => true, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
        Email:
        <%= f.email_field :email, :required => true, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
        Message:
        <%= f.text_field :message, :as => :text, :required => true, class: 'form-control' %>
      </div>
    </div>
    <div class= "hidden">
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div class="row">
      <div class="col-md-5">
      <%= f.submit "Send message", class: "btn btn btn-success btn-raised" %>
      </div>
    </div>
  <% end %>
