<header class="navbar navbar-warning navbar-fixed-top">
	<div class="container">
    <div class="navbar-header">
      <a><%= link_to "Albanian Hiking Club", root_path, class: "navbar-brand mdi-image-filter-hdr",id: "logo" %></a>
      <button class = "navbar-toggle" data-toggle = "collapse" data-target = "#drop" aria-expanded="false" aria-controls="drop">
        <span class = "icon-bar"></span>
        <span class = "icon-bar"></span>
        <span class = "icon-bar"></span>
    	</button>
    </div>

    <div class="collapse navbar-collapse" id="drop">
      <ul class="nav navbar-nav navbar-right">
			  <% if user_signed_in? %> 
					<li class="panel-warning"><%= link_to "Membership",  membership_path, 	class: "navbtn mdi-action-wallet-membership" %></li>
					<!-- <li><%= link_to "Users", users_path, class: "mdi-action-face-unlock" %></li>  -->
					<li class="dropdown">
            <a href="#" class="navbtn dropdown-toggle mdi-action-list" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
							<li><%= link_to "Profile", user_path(current_user), class: "mdi-action-account-circle" %></li> 
							<li><%= link_to "Settings", edit_user_registration_path(current_user), class: "mdi-action-list" %></li>
							<li class="divider"></li>
							<li>
								<%= link_to "Log out", destroy_user_session_path, method: "delete", class: "mdi-action-perm-identity" %> 
							</li>
						</ul>
					</li> 
				<% else %>
					<li><%= link_to "Log In", new_user_session_path, class: "navbtn mdi-action-account-circle" %></li> 
					<li><%= link_to "Sign Up", new_user_registration_path, class: "navbtn mdi-action-perm-identity" %></li> 
				<% end %>
			</ul>

			<div class="row">
				<ul class="nav navbar-nav">
					<div class="col-md-2">
		  			<li><%= link_to "Home",        root_path, 				class: "btn btn-warning navbtn mdi-action-home" %></li> 
		  		</div>
		  		<div class="col-md-2">
						<li><%= link_to "Calendar",    calendar_path, 		class: "btn btn-warning navbtn mdi-action-perm-contact-cal" %></li>
					</div>
		  		<div class="col-md-2">
						<li><%= link_to "Hikes",       hikes_path, 				class: "btn btn-warning navbtn mdi-maps-directions-walk" %></li>
					</div>
		  		<div class="col-md-2">
						<li><%= link_to "Pictures",    pictures_path, 		class: "btn btn-warning navbtn mdi-action-picture-in-picture" %></li>
					</div>
		  		<div class="col-md-2">
						<li><%= link_to "Contact",     new_contact_path, 			class: "btn btn-warning navbtn mdi-communication-contacts" %></li>
					</div>
		  		<div class="col-md-2">
						<li><%= link_to "About",       about_path, 				class: "btn btn-warning navbtn mdi-navigation-more-horiz" %></li>
					</div>
				</ul>
			</div>
    </div>
  </div>
</header>